#+----------------------------------------------------------------------------------------------------------------------+#
#|    Source files                                                                                                      |#
#+----------------------------------------------------------------------------------------------------------------------+#

SRCS :=			ft_init2.c			\
				ft_minimap.c		\
				ft_read_map.c		\
				ft_keys.c			\
				ft_paint.c			\
				draw_untextured.c

#+----------------------------------------------------------------------------------------------------------------------+#
#|    Utilities                                                                                                         |#
#+----------------------------------------------------------------------------------------------------------------------+#
#
#																			#
WHT		= \033[0m#															#
GRN		= \033[32m#															#
RED		= \033[31m#															#
WHT1	= \033[0;1m#														#
GRN1	= \033[32;1m#														#
RED1	= \033[31;1m#														#
DRK		= \033[2m#															#
MADE_MSG = \n	$(WHT1)Created $(GRN1)#										#
DEL_MSG = \n	$(WHT1)No more $(DRK)$(RED1)#								#
ERROR_MSG = "\n	$(WHT1)$(DRK)Nothing to $@\n"#								#
#																			#
REPLACE =  2>&1| awk '{sub(/.\//,"  $(WHT) $(DRK)removed $(RED)")}1'

#+----------------------------------------------------------------------------------------------------------------------+#
#|    Good stuff                                                                                                        |#
#+----------------------------------------------------------------------------------------------------------------------+#

NAME		= libcub3d.a

BIN			= ./.obj
SRC_DIR		= ./src
INCL_DIR	= ./includes

HEAD		:= cub3d.h
OBJ			:= $(SRCS:c=o)
BOBJ		:= $(BSRCS:c=o)

INCLUDES	:= $(addprefix $(INCL_DIR)/, $(HEAD))
OBJ_FILES	:= $(addprefix $(BIN)/, $(OBJ))
SRC_FILES	:= $(addprefix $(SRC_DIR)/, $(SRCS))

CC			= gcc
CF			= -Wall -Wextra -Werror

#+----------------------------------------------------------------------------------------------------------------------+#
#|    Rules                                                                                                             |#
#+----------------------------------------------------------------------------------------------------------------------+#

all: $(NAME)

$(NAME): $(OBJ_FILES)
	@cd libft && make bonus
	@cp libft/libft.a libft.a
	@cd minilibx_o && make
	@cp minilibx_o/libmlx.a libmlx.a
	@ar rcs $(NAME) $^
	@echo "$(MADE_MSG)lib$(WHT)\n"
	@echo "\n$(DRK)  ( \`-.__.-' )\n   \`-.    .-'\n      \\  /\n       ||   $(DRK)$(GRN)no malloc $(WHT)$(DRK)-\n       ||  $(DRK)$(GRN)no problem$(WHT)$(DRK)\n      //\\\\\\\\\n     //  \\\\\\\\\n    ||    ||\n    ||____||\n    ||====||\n     \\\\\\\\  //\n      \\\\\\\\//\n       ||\n       ||\n       ||\n       ||\n       ||\n       ||\n       []\n"
	@$(CC) $(CF) main.c  -L. -lcub3d -lft -lmlx -framework OpenGL -framework AppKit

#+----------------------------------------------------------------------------------------------------------------------+#
#|    Creating bindir and objects                                                                                       |#
#+----------------------------------------------------------------------------------------------------------------------+#

$(BIN):
	@mkdir $(BIN)
	@echo "$(MADE_MSG) $@$(WHT)\n"

$(BIN)/%.o: $(SRC_DIR)/%.c $(INCLUDES)| $(BIN)
	@$(CC) -I$(INCLUDES) $< -c $(CF) -o $@
	@echo "   Adding $(DRK)$(GRN)$@...$(WHT)"

#+----------------------------------------------------------------------------------------------------------------------+#
#|    Trash removal rules                                                                                               |#
#+----------------------------------------------------------------------------------------------------------------------+#

clean:
	@if test -d $(BIN); \
	then rm -rfvd $(BIN) $(REPLACE); \
	echo "$(DEL_MSG).o files$(WHT)\n"; \
	else echo $(ERROR_MSG); \
	fi

fclean: clean
	@if test -f $(NAME); \
	then rm -rfv ./$(NAME) $(REPLACE); \
	echo "$(DEL_MSG) lib$(WHT)\n"; \
	else echo $(ERROR_MSG); \
	fi

re: fclean all
