#+----------------------------------------------------------------------------------------------------------------------+#
#|    Source files                                                                                                      |#
#+----------------------------------------------------------------------------------------------------------------------+#

SRCS :=			ft_atoi.c			\
				ft_math.c			\
				ft_print.c			\
				ft_printf.c			\
				ft_putnbr_base.c	\
				ft_string.c			\

#+----------------------------------------------------------------------------------------------------------------------+#
#|    Utilities                                                                                                         |#
#+----------------------------------------------------------------------------------------------------------------------+#
#
#																			#
WHT = \033[0m#																#
GRN = \033[32m#																#
RED = \033[31m#																#
WHT1 = \033[0;1m#															#
GRN1 = \033[32;1m#															#
RED1 = \033[31;1m#															#
DRK = \033[2m#																#
MADE_MSG = \n	$(WHT1)Created $(GRN1)#										#
DEL_MSG = \n	$(WHT1)No more $(DRK)$(RED1)#								#
ERROR_MSG = "\n	$(WHT1)$(DRK)Nothing to $@\n"#								#
#																			#
REPLACE =  2>&1| awk '{sub(/.\//,"  $(WHT) $(DRK)removed $(RED)")}1'

#+----------------------------------------------------------------------------------------------------------------------+#
#|    Good stuff                                                                                                        |#
#+----------------------------------------------------------------------------------------------------------------------+#

NAME = libftprintf.a

BIN = ./obj
SRC_DIR = ./src
INCL_DIR = ./includes

HEAD = $(NAME:a=h)
OBJ = $(SRCS:c=o)
BOBJ = $(BSRCS:c=o)

INCLUDES = $(addprefix $(INCL_DIR)/, $(HEAD))
OBJ_FILES = $(addprefix $(BIN)/, $(OBJ))
SRC_FILES = $(addprefix $(SRC_DIR)/, $(SRCS))
CC = gcc
CF = -Wall -Wextra -Werror

#+----------------------------------------------------------------------------------------------------------------------+#
#|    Rules                                                                                                             |#
#+----------------------------------------------------------------------------------------------------------------------+#

all: $(NAME)

$(NAME): $(OBJ_FILES)
	@ar rcs $(NAME) $^
	@echo "$(MADE_MSG)lib$(WHT)\n"
	@echo "\n$(DRK)  ( \`-.__.-' )\n   \`-.    .-'\n      \\  /\n       ||   $(DRK)$(GRN)no malloc $(WHT)$(DRK)-\n       ||  $(DRK)$(GRN)no problem$(WHT)$(DRK)\n      //\\\\\\\\\n     //  \\\\\\\\\n    ||    ||\n    ||____||\n    ||====||\n     \\\\\\\\  //\n      \\\\\\\\//\n       ||\n       ||\n       ||\n       ||\n       ||\n       ||\n       []\n"

main: $(NAME)
	$(CC) main.c -L. -lftprintf $(CF)
	./a.out | tr ' ' '.' | cat -e

#+----------------------------------------------------------------------------------------------------------------------+#
#|    Creating bindir and objects                                                                                       |#
#+----------------------------------------------------------------------------------------------------------------------+#

$(BIN):
	@mkdir $(BIN)
	@echo "$(MADE_MSG) $@$(WHT)\n"

$(BIN)/%.o: $(SRC_DIR)/%.c $(INCLUDES)| $(BIN)
	@$(CC) -I$(INCLUDES) $< -c $(CF) -o $@
	@echo "   Adding $(DRK)$(GRN)$@...$(WHT)"

#+----------------------------------------------------------------------------------------------------------------------+#
#|    Trash removal rules                                                                                               |#
#+----------------------------------------------------------------------------------------------------------------------+#

clean:
	@if test -d $(BIN); \
	then rm -rfvd $(BIN) $(REPLACE); \
	echo "$(DEL_MSG).o files$(WHT)\n"; \
	else echo $(ERROR_MSG); \
	fi

fclean: clean
	@if test -f $(NAME); \
	then rm -rfv ./$(NAME) $(REPLACE); \
	echo "$(DEL_MSG) lib$(WHT)\n"; \
	else echo $(ERROR_MSG); \
	fi

re: fclean all
